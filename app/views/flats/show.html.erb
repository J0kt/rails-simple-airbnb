<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1496417263034-38ec4f0d6b21?ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80'); height: 300px; background-size: cover; background-position: center;">
</div>

<div class="container margin-top-negative">
  <div class="row">

    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="address"><%= @flat.address %></p>
      </div>

      <div class="flat-show-card mt-3">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>

        <div class="d-flex mt-3">
          <div class="me-4"><i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests %> guests</div>
          <div><i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night %> / night</div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place!</h5>
        <form action="#"> <div class="input-group mb-3">
            <span class="input-group-text">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017">
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017">
          </div>
          <input type="submit" value="Book" class="btn btn-success w-100" style="background-color: #28a745;">
        </form>
      </div>

      <div class="mt-3 d-flex justify-content-between align-items-center">
        <p class="mb-0">Share</p>
        <div class="social-links">
          <i class="fa-brands fa-facebook-square fa-2x me-2"></i>
          <i class="fa-brands fa-twitter-square fa-2x me-2"></i>
          <i class="fa-brands fa-pinterest-square fa-2x"></i>
        </div>
      </div>
    </div>

  </div>

  <div class="mt-3">
    <%= link_to "Edit this flat", edit_flat_path(@flat), class: "btn btn-warning" %>
    <%= link_to "Back to list", flats_path, class: "btn btn-outline-secondary" %>
  </div>

</div>

<style>
  .flat-show-card {
    background: white;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
    border: 1px solid #e1e1e1;
  }
  .margin-top-negative {
    margin-top: -50px; 
  }
</style>
