<div class="container mt-3">

  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1>Simple Airbnb</h1> <div class="d-flex">
      <%= form_with url: flats_path, method: :get, class: "d-flex me-2" do %>

        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Find a flat"
        %>

        <%= submit_tag "Search", name: "", class: "btn btn-outline-success ms-2" %>
      <% end %>

      <%= link_to "Add Flat", new_flat_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <% if params[:query].present? %>
    <div class="mb-3">
      <h3>All our Flats</h3>
      <p>
        You searched for <strong><%= params[:query] %></strong>.
        We found <strong><%= @flats.count %></strong> flats out of our <strong><%= Flat.count %></strong> on our website.
      </p>
    </div>
  <% else %>
    <h1 class="mb-3">All our Flats (<%= @flats.count %>)</h1>
  <% end %>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-sm-12 col-md-6 col-lg-4 mb-4">

        <div class="card bg-light border-0 shadow-sm h-100">

          <% if flat.picture_url.present? %>
            <%= image_tag flat.picture_url, class: "card-img-top", alt: flat.name, style: "height: 200px; object-fit: cover;" %>
          <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" class="card-img-top" alt="default image" style="height: 200px; object-fit: cover;">
          <% end %>

          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>

            <div class="d-flex align-items-center mt-3">
              <i class="fa-solid fa-user-group me-2"></i>
              <span class="me-4"><%= flat.number_of_guests %></span>

              <i class="fa-solid fa-euro-sign me-2"></i>
              <span><%= flat.price_per_night %></span>
            </div>
          </div>

          <div class="card-footer bg-transparent border-top-0 d-flex align-items-center justify-content-between">
            <div>
              <%= link_to "More info", flat_path(flat), class: "text-primary text-decoration-none me-2" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "text-warning text-decoration-none" %>
            </div>

            <%= link_to "Remove", flat_path(flat),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "text-danger text-decoration-none" %>
          </div>

        </div>
      </div>
    <% end %>
  </div>

</div>
